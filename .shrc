# vim: filetype=sh

##
# Dotfiles.
##

dotfiles=(.exports .aliases .functions .shrc.local)
for dotfile in "${dotfiles[@]}" ; do
  dotfile="$HOME/$dotfile"
  if [ -f "$dotfile" ] ; then
    source "$dotfile"
  fi
done


##
# GPG Agent.
##

export GPG_TTY=$(tty)


##
# 3rd Party.
##

# thefuck - https://github.com/nvbn/thefuck
if hash thefuck 2>/dev/null ; then
  eval "$(thefuck --alias)"
fi


