# cURL configuration options
# http://curl.haxx.se/docs/manpage.html

# Limit the connection time (in seconds).
connect-timeout = 60

# Follow HTTP redirects
location

# Display progress as a simple progress bar.
progress-bar

# When following a redirect, automatically set the previous URL as referer.
referer = ";auto"

# Show error messages.
show-error

# Mask as Firefox on Linux, some sites don't like curl.
user-agent = "Mozilla/5.0 (X11; Linux x86_64; rv:28.0) Gecko/20100101 Firefox/36.0"
